{
  "buildCommand": "vite build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "ignoreCommand": "bash -c '[ \"$VERCEL_ENV\" == \"production\" ] && git diff --quiet HEAD^ HEAD -- ./projects/polymath/ && exit 0 || exit 1'",
  "functions": {
    "api/*.ts": {
      "maxDuration": 60
    },
    "api/cron/*.ts": {
      "maxDuration": 60
    },
    "api/projects/**/*.ts": {
      "maxDuration": 60
    },
    "api/suggestions/**/*.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/weekly-synthesis",
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/cron/strengthen-nodes",
      "schedule": "0 0 * * *"
    }
  ]
}
