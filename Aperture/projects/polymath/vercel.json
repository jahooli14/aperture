{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "functions": {
    "api/analytics.ts": {
      "maxDuration": 60
    },
    "api/connections.ts": {
      "maxDuration": 60
    },
    "api/memories.ts": {
      "maxDuration": 60
    },
    "api/monitoring.ts": {
      "maxDuration": 60
    },
    "api/projects.ts": {
      "maxDuration": 60
    },
    "api/reading.ts": {
      "maxDuration": 60
    },
    "api/cron/jobs.ts": {
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/jobs?job=daily",
      "schedule": "30 21 * * *"
    }
  ]
}
