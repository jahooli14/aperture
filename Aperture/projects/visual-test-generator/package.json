{
  "name": "visual-test-generator",
  "version": "0.1.0",
  "description": "AI-powered test generation from video recordings - transform manual testing into Playwright tests in 30 seconds",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "testing",
    "automation",
    "playwright",
    "ai",
    "vision-language",
    "florence-2",
    "smolvlm",
    "webllm",
    "test-generation",
    "video-to-code"
  ],
  "author": "Aperture Projects",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.0",
    "@mlc-ai/web-llm": "^0.2.0",
    "playwright": "^1.56.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.37.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jahooli14/aperture.git",
    "directory": "projects/visual-test-generator"
  }
}
