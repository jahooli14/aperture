{
  "buildCommand": "npm run build && node scripts/compile-api.js",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60,
      "runtime": "nodejs20"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/jobs?job=daily",
      "schedule": "30 21 * * *"
    }
  ]
}
