{
  "buildCommand": "npm run build",
  "ignoreCommand": "bash -c 'git diff --quiet HEAD^ HEAD projects/polymath/ && exit 0 || exit 1'",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "functions": {
    "api/*.ts": {
      "maxDuration": 60
    },
    "api/cron/*.ts": {
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/jobs?job=daily",
      "schedule": "30 21 * * *"
    }
  ]
}
